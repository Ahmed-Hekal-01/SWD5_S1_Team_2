@model IEnumerable<Business.ViewModels.CategoryViewModel.CategoryViewModel>

@{
    ViewData["Title"] = "Categories";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Categories Management</h6>
            <a 
             asp-area="Admin"
            asp-controller="Categories"
            asp-action="Create" class="btn btn-sm btn-primary">
                <i class="fas fa-plus"></i> Add New Category
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <img src="@item.ImagePath" alt="@item.Name" style="width: 50px; height: 50px; object-fit: cover;" />
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-controller="Categories" asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ml-2">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#categoriesTable').DataTable();
        });
    </script>
}
