@model Business.ViewModels.CategoryViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Delete Category";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Confirm Deletion</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5>Are you sure you want to delete this category?</h5>
                <p>Category Name: <strong>@Model.Name</strong></p>
                <p>This action cannot be undone. Deleting a category may fail if it has associated products.</p>
            </div>
            
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
