@model Business.ViewModels.ProductViewModels.ProductViewModel

@{
    ViewData["Title"] = "Delete Product";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Delete Product</h1>
    
    <div class="alert alert-danger mb-4">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Are you sure you want to delete this product? This action cannot be undone.
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Product Image</h6>
                </div>
                <div class="card-body text-center">
                    <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/img/default-product.jpg" : Model.ImageUrl)" 
                         alt="@Model.Name" class="img-fluid" style="max-height: 250px;" />
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Product Information</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th style="width: 30%">Name</th>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <th>Category</th>
                                <td>@(Model.Category?.Name ?? "Not Assigned")</td>
                            </tr>
                            <tr>
                                <th>Price</th>
                                <td>$@Model.Price?.ToString("0.00")</td>
                            </tr>
                            <tr>
                                <th>Stock</th>
                                <td>@Model.Stock</td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td>@Model.Status</td>
                            </tr>
                        </table>
                    </div>
                    
                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
