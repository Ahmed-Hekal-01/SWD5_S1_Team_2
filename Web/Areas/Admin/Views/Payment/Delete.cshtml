@model Business.ViewModels.PaymentViewModels.PaymentViewModel


@{
    ViewData["Title"] = "Delete Payment";
}

<h2 class="mb-4">Delete Payment</h2>

<h4>Are you sure you want to delete this payment?</h4>

<div class="mt-3">
    <dl class="row">
        <dt class="col-sm-3">Transaction ID</dt>
        <dd class="col-sm-9">@Model.TransactionId</dd>

        <dt class="col-sm-3">Amount</dt>
        <dd class="col-sm-9">@Model.Amount</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Method</dt>
        <dd class="col-sm-9">@Model.Method</dd>

        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="TransactionId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>