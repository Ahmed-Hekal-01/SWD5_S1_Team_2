@model List<Domain.Entities.User>

@{
    ViewData["Title"] = "User List";
}

<h1>User List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Verified</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@(user.IsVerified ? "Verified" : "Not Verified")</td>
                <td>
                    <a href="@Url.Action("Edit", "User", new { id = user.Id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Suspend", "User", new { id = user.Id })" class="btn btn-warning">Suspend</a>
                </td>
            </tr>
        }
    </tbody>
</table>
