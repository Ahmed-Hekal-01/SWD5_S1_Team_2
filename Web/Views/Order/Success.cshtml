@{
    ViewData["Title"] = "Order Successful";
}

<div class="container-fluid py-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Order Successfully Placed</span></h2>
    </div>
    <div class="row px-xl-5">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                    <h4 class="mt-4 mb-3">Thank you for your purchase!</h4>
                    <p class="mb-4">Your order #@ViewData["OrderId"] has been placed successfully.</p>
                    
                    <p>A confirmation email has been sent to your email address.</p>
                    
                    <div class="mt-4">
                        <a href="/Order/Details/@ViewData["OrderId"]" class="btn btn-primary">View Order Details</a>
                        <a href="/" class="btn btn-outline-primary ml-2">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
