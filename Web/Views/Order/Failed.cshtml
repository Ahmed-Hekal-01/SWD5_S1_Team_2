@{
    ViewData["Title"] = "Order Failed";
}

<div class="container-fluid py-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Order Processing Failed</span></h2>
    </div>
    <div class="row px-xl-5">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-times-circle text-danger" style="font-size: 5rem;"></i>
                    <h4 class="mt-4 mb-3">We couldn't process your order</h4>
                    <p class="mb-4">@ViewData["ErrorMessage"]</p>
                    
                    <div class="mt-4">
                        <a href="/Cart" class="btn btn-primary">Return to Cart</a>
                        <a href="/" class="btn btn-outline-primary ml-2">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
