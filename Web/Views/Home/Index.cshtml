@model HomeViewModel

@{
    @* ViewData["Title"] = "Home Page"; *@
}

<partial name="_BannerCarousel" />

<partial name="_Featured" />

<partial 
name="_Categories"  
model="Model.Categories" />

<!-- Products Start -->
<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">
        New Arrivals</span></h2>
    <div class="row px-xl-5">
        @foreach (var product in Model.NewArrivals)
        {
            @await Html.PartialAsync("_ProductCard", product)
        }
    </div>
</div>
<!-- Products End -->

<!-- Hot Deals Start -->
<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">
        Hot Deals</span></h2>
    <div class="row px-xl-5">
        @foreach (var product in Model.HotDeals)
        {
            @await Html.PartialAsync("_ProductCard", product)
        }
    </div>
</div>
<!-- Hot Deals End -->


<!-- BestSelling Items Start -->

 <h2 class=" position-relative text-uppercase mx-xl-5">
                <span class="bg-secondary pr-3">Best Selling Products
        </span></h2>
                <p class="text-muted mt-3">Our best-selling products that customers love</p>

<section class="py-5 my-4 bg-light rounded">
    <div class="container-fluid">
    
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 px-xl-5">
            @foreach (var product in Model.BestSelling)
            {
                <div class="col mb-4">
                    @await Html.PartialAsync("_MiniProductCard", product)
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a href="/Products/BestSelling" class="btn btn-primary rounded-pill px-4 py-2">View All Best Selling Products</a>
        </div>
    </div>
</section>
<!-- BestSelling Items End -->
