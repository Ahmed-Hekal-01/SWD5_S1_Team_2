@{
    ViewData["Title"] = "Payment Failed";
    var errorMessage = ViewBag.ErrorMessage ?? "Your payment could not be processed.";
}

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/">Home</a>
                <a class="breadcrumb-item text-dark" href="/cart">Cart</a>
                <a class="breadcrumb-item text-dark" href="/cart/checkout">Checkout</a>
                <span class="breadcrumb-item active">Payment Failed</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<!-- Failure Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow-sm mb-5">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="error-icon mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="#dc3545" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="15" y1="9" x2="9" y2="15"></line>
                                <line x1="9" y1="9" x2="15" y2="15"></line>
                            </svg>
                        </div>
                        
                        <h2 class="mb-3 text-danger">Payment Failed</h2>
                        <p class="mb-4 text-muted">We were unable to process your payment. Please review the details below.</p>
                    </div>
                    
                    <div class="alert alert-danger mb-4">
                        <p class="mb-0">@errorMessage</p>
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h5 class="mb-3">Possible reasons:</h5>
                            <ul class="mb-0">
                                <li class="mb-2">Your card was declined by your bank</li>
                                <li class="mb-2">Insufficient funds in your account</li>
                                <li class="mb-2">The payment information was entered incorrectly</li>
                                <li class="mb-2">There was a temporary issue with our payment system</li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h5 class="mb-3">What to do next:</h5>
                            <ol class="mb-0">
                                <li class="mb-2">Check that your card details are correct</li>
                                <li class="mb-2">Make sure your card has sufficient funds</li>
                                <li class="mb-2">Try using a different payment method</li>
                                <li>Contact your bank if the issue persists</li>
                            </ol>
                        </div>
                    </div>
                    
                    <div class="text-center">
                        <div class="d-flex flex-column flex-md-row justify-content-center">
                            <a href="/payment/StripeCheckout" class="btn btn-primary mb-3 mb-md-0 me-md-3">
                                <i class="fa fa-credit-card me-2"></i>Try Again
                            </a>
                            <a href="/cart/checkout" class="btn btn-outline-primary">
                                <i class="fa fa-arrow-left me-2"></i>Back to Checkout
                            </a>
                        </div>
                        
                        <div class="mt-4">
                            <p class="text-muted mb-0">Need help? <a href="/contact">Contact our support team</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Failure End -->

<style>
    .error-icon {
        animation: pulse 2s infinite;
    }
    
    @* @keyframes pulse {
        0% {
            transform: scale(0.95);
            opacity: 1;
        }
        
        70% {
            transform: scale(1);
            opacity: 0.8;
        }
        
        100% {
            transform: scale(0.95);
            opacity: 1;
        }
    } *@
</style>
